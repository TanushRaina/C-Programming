#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

struct marks{
    int maths;
    int science;
    int english;
    int computer; 
};
struct student{
    int rollnumber;
    char name[100];
    struct marks m;
    int total;
    
};

int main() {
    int n;
    scanf("%d",&n);
    struct student s[n];
    for(int i = 0; i<n; i++){
        scanf("%d",&s[i].rollnumber);
        scanf("%s",s[i].name);
        
        scanf("%d",&s[i].m.maths);
        scanf("%d",&s[i].m.science);
        scanf("%d",&s[i].m.english);
        scanf("%d",&s[i].m.computer);
        s[i].total = s[i].m.maths+s[i].m.science+s[i].m.english+s[i].m.computer;
    }
    int top = 0;
    for(int i = 0 ; i<n; i++){
        if(s[i].total >= s[top].total ){
            top = i;
        }
    }
    printf("Topper Details: \n");
    printf("Roll No: %d\n",s[top].rollnumber);
    printf("Name: %s\n",s[top].name);
    printf("Total Marks: %d\n",s[top].total);
    
        

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
