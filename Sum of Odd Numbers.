#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int N, sum = 0;
    scanf("%d",&N);
    for(int i = 0; i<=N; i++){
        if(i%2 != 0){
        sum += i;
        }
    }
    printf("%d\n",sum);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
